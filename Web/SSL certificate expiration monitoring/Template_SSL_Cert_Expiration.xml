<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2019-10-30T08:12:21Z</date>
    <groups>
        <group>
            <name>Templates/Web</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template SSL Cert Expiration</template>
            <name>Template SSL Cert Expiration</name>
            <groups>
                <group>
                    <name>Templates/Web</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>SSL</name>
                </application>
            </applications>
            <discovery_rules>
                <discovery_rule>
                    <name>SSL HTTPS Discovery</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>ssl_https.discovery</key>
                    <delay>300</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#DOMAIN_HTTPS}</macro>
                                <value>.*</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>90d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Certificate $1 expire</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>ssl_https.expire[{#DOMAIN_HTTPS}]</key>
                            <delay>300</delay>
                            <history>30d</history>
                            <trends>180d</trends>
                            <applications>
                                <application>
                                    <name>SSL</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;7</expression>
                                    <name>Certificate {#DOMAIN_HTTPS} expires in {ITEM.VALUE} days</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
                <discovery_rule>
                    <name>SSL SMTP Discovery</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>ssl_smtp.discovery</key>
                    <delay>300</delay>
                    <filter>
                        <conditions>
                            <condition>
                                <macro>{#DOMAIN_SMTP}</macro>
                                <value>.*</value>
                                <formulaid>A</formulaid>
                            </condition>
                        </conditions>
                    </filter>
                    <lifetime>90d</lifetime>
                    <item_prototypes>
                        <item_prototype>
                            <name>Certificate $1 expire</name>
                            <type>ZABBIX_ACTIVE</type>
                            <key>ssl_smtp.expire[{#DOMAIN_SMTP}]</key>
                            <delay>300</delay>
                            <history>30d</history>
                            <trends>180d</trends>
                            <applications>
                                <application>
                                    <name>SSL</name>
                                </application>
                            </applications>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{last()}&lt;7</expression>
                                    <name>Certificate {#DOMAIN_SMTP} expires in {ITEM.VALUE} days</name>
                                    <priority>WARNING</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                </discovery_rule>
            </discovery_rules>
        </template>
    </templates>
</zabbix_export>
